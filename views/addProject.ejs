                                        <div class="col-xs-4">
                                            <button type="button" class="btn btn-default btn-block" disabled><b>TE</b></button>
                                        </div>
                                        <div class="col-xs-8">
                                            <select id="te_member" title="请选择测试人员" name="usertype" class="selectpicker show-tick form-control" multiple data-live-search="false">
                                                <% for (var i=0; i<group.te.length; i++) { %>
                                                    <option value="<%=group.te[i].id %>" > <%=group.te[i].nickname %></option>    
                                                <% } %>
                                            </select>
