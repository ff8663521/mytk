    <script>
        //模态框赋值
        $('#demandModal').on('show.bs.modal', function (event) {
            var pid = $('#hasPID').val();
            var pname = $('#hasPNAME').val();

            //表单重置
            document.getElementById('demandFrom').reset();

            if(pid != -1 && pid != null){
                var modal = $(this);
                modal.find('#d4pjID').val(pid);
                modal.find('#d4pjName').val(pname);
                modal.find('#dmID').val(Math.floor(new Date().getTime()));
            }else{
                return false;
            }

        })
    </script>  

    <script>
        function projectClick() {
            $(".nav-item").removeClass('active');
            $(".project-nav").addClass('active');
            $('.item-content').hide();
            $('.item-project').show();

            $('#pfrom_reset').click();
        }
        function demandClick() {
            $(".nav-item").removeClass('active');
            $(".demand-nav").addClass('active');
            $('.item-content').hide();
            $('.item-demand').show();

            var pid = $('#hasPID').val();
            if(pid == ''){
                $('#hasPID').val(-1);
                pid = -1;
            }   

            //销毁表格
            $("#demandList").bootstrapTable('destroy'); 
            //新建表格
            var dtable = new Demandtable();
            dtable.Init(pid);
        }
        function versionClick() {
            $(".nav-item").removeClass('active');
            $(".version-nav").addClass('active');
            $('.item-content').hide();
            $('.item-version').show();

            var pid = $('#hasPID').val();
            if(pid == ''){
                $('#hasPID').val(-1);
                pid = -1;
            }   

            //销毁表格
            $("#versionList").bootstrapTable('destroy'); 
            //新建表格
            var vtable = new Versiontable();
            vtable.Init(pid);
        }
    </script>

    <script>
        //清除select 选择方法
        function cleanSelect(){
            $('.selectpicker').selectpicker('deselectAll');
        }

        //添加项目方法
        function addProject(){
            var pjName = $('#pjName').val();
            var pjDesc = $('#pjDesc').val();

            var pm_member = $("#pm_member").val();
            var de_member =$("#de_member").val();
            var te_member =$("#te_member").val();
            var da_member =$("#da_member").val();

            pm_member = pm_member == null?null:pm_member;
            de_member = de_member == null?null:de_member.join(',');
            te_member = te_member == null?null:te_member.join(',');
            da_member = da_member == null?null:da_member.join(',');

            var pjId = Math.floor(new Date().getTime()/1000 );
            $('#pjId').val(pjId);

            var submitData = {
                'pjName': pjName,
                'pjId': pjId,
                'pjDesc': pjDesc,
                'pm_member': pm_member,
                'de_member':de_member,
                'te_member': te_member,
                'da_member':da_member 
            };

            $.ajax({
                url:'/project/addProject',
                type:'POST',
                async:true,
                dataType:'json',
                data:submitData,
                success:function(result){
                    if(result.success){
                        var data = JSON.parse(result.data);
                        $('#hasPID').val(data.pjId);
                        $('#hasPNAME').val(data.pjName);
                        demandClick();  
                    }else{
                        alert(result.msg);
                    }
                },
                error:function(error){
                   alert('系统异常，请稍后再添加');
                }
            });
            
        }

    </script>

    <script>
        function Demandtable(){
            this.Init = function(pid){
                $('#demandList').bootstrapTable({
                    url: '/project/getAlldm',
                    method:'get',
                    queryParams: function queryParams(params) {   //设置查询参数  
                            var param = {
                                limit: params.limit,    //页面大小
                                offset: params.offset,  //页码
                                order:params.order,     //排序
                                pid:pid  //所属项目
                            };
                            return param;
                        },
                    toolbar: '#dmtoolbar',              //工具按钮用哪个容器
                    checkboxHeader: false,              //设置false 将在列头隐藏check-all checkbox .
                    striped: true,                      //是否显示行间隔色
                    cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                    pagination: true,                   //是否显示分页（*）
                    sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                    pageNumber: 1,                      //初始化加载第一页，默认第一页
                    pageSize: 10,                       //每页的记录行数（*）
                    pageList: [10, 20, 50],             //可供选择的每页的行数（*）
                    showColumns: true,                  //是否显示所有的列
                    showRefresh: true,                  //是否显示刷新按钮
                    minimumCountColumns: 2,             //最少允许的列数
                    clickToSelect: true,                //是否启用点击选中行
                    singleSelect:true,                  //只能选中一行
                    height: 500,                        //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
                    uniqueId: "id",                     //每一行的唯一标识，一般为主键列
                    columns: [
                            {
                                field: 'id',
                                title: '需求编号'
                            }, {
                                field: 'name',
                                title: '需求名称',
                            }, {
                                field: 'state',
                                title: '需求状态',
                                formatter: function (data) {
                                    if (data == 0) {
                                        return "未分解";
                                    } else if (data == 1) {
                                        return "进行中";
                                    } else if(data == 2 ){
                                        return "已完成";
                                    }else if(data == 3 ){
                                        return "暂停开发";
                                    }else if(data == 4 ){
                                        return "异常问题";
                                    }
                                }
                            }, {
                                field: 'd_desc',
                                title: '需求描述'
                            }]
                });
            }
        }

        function addDemand(){
            var d4pjID = $('#d4pjID').val();
            var dmName = $('#dmName').val();
            var dmID = $('#dmID').val();
            var dmDesc = $('#dmDesc').val();

            var submitData = {
                'pid': d4pjID,
                'dmName': dmName,
                'dmID': dmID,
                'dmDesc': dmDesc
            };

            $.ajax({
                url:'/project/addDemand',
                type:'POST',
                async:true,
                dataType:'json',
                data:submitData,
                success:function(result){
                    if(result.success){
                        //关闭窗口
                        $('#demandModal').modal('hide');
                        //刷新列表
                        $("#demandList").bootstrapTable('refresh');

                    }else{
                        alert(result.msg);
                    }
                },
                error:function(error){
                   alert('系统异常，请稍后再添加');
                }
            });

        }
    </script>

