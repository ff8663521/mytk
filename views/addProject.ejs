                                        <div class=" col-xs-6">
                                            <button type="button" class="btn btn-success btn-block" onclick="addProject();">提交</button>
                                        </div>
                                        <div class="col-xs-6">
                                            <input id="pfrom_reset" class="btn btn-warning btn-block" type="reset" onclick="cleanSelect();true;" value="重置">
