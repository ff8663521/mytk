                                                    <label for="dmName" class="col-sm-2 control-label">需求名称</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" class="form-control" id="dmName" placeholder="需求名称">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="dmID" class="col-sm-2 control-label">需求编号</label>
